<h2>Latest posts:</h2>
<br /> <!--отступ--> 
<% @results.each do |post| %>
	<p>
		<%= post['content'] %>
		<br />
		<br />
		Added at <%= post['created_date'] %><!--выводим дату создания-->
		<br />
		<br />
		<a href= "/post/<%= post['id'] %>">Comments</a><!--будет выводить каждый пост по id(.../post/1)-->
	<p>	
	<hr /> <!--разделяет посты чертой-->	
<% end %>	